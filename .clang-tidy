  clang-analyzer-optin*,
  clang-analyzer-osx*,
  clang-analyzer-valist*,
  concurrency-*,
  cppcoreguidelines-*,
  -cppcoreguidelines-avoid-magic-numbers,
  -darwin-*,
  -fuchsia-*,
  google-*,
  hicpp-*,
  linuxkernel-*,
  llvm-*,
  -llvm-header-guard,
  -llvmlibc-*,
  misc-*
